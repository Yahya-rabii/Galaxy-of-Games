@model mvc_gog.Models.User

@{
    ViewData["Title"] = "Login";
}


    <section class="h-100">
        <div class="container h-100">
            <div class="row">
                <div class="card-wrapper">
                    <div class="brand">
                        <img src="https://icon-library.com/images/gog-galaxy-icon/gog-galaxy-icon-15.jpg" class="img">
                    </div>
                    <div class="card fat">
                        <div class="card-body">
                            <h4 class="card-title">Login</h4>


                            <form asp-action="Login" method="POST" class="my-login-validation" novalidate="">
                                <div class="form-group">
                                    <label asp-for="Email">E-Mail Address</label>
                                    <input id="email" type="email" rounded-pill" name="email" value="" required autofocus class="form-control text-light" style="background-color: transparent; border: 1px solid white">
                                    <div class="invalid-feedback">
                                        Email is invalid
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label label asp-for="Password">Password </label>
                                    <input id="password" type="password" class="form-control text-light" style="background-color: transparent; border: solid white" rounded-pill" name="password" required data-eye>
                                    <div class="invalid-feedback"> Password is required </div>
                                </div>



                                <div class="m-0 LOGINbtns">
                                    <button type="submit" class="btn btn-primary">
                                        Login
                                    </button>
                                </div>

                                
                            <div class="mt-4 text-center">
                                Already have an account? <a asp-action="Register"> <input type="button" class="mybtnre" value="Register"></a>
                            </div>


                            </form>


                        </div>
                    </div>
                </div>
            </div>
        </div>


    </section>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
